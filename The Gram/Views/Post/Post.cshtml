@model PostCreationViewModel
@using The_Gram.Models.Post
@{
    ViewData["Title"] = "post";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="postForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <
            <div class="text-center mb-3">
                <label asp-for="@Model.Description">Caption</label>
                <input class="form-control " aria-required="true" asp-for="@Model.Description" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label for="imageUrls">Image URLs:</label>
            </div>
            <div class="text-center mb-3" id="imageUrlsContainer">
                <input class="form-control" id="imageUrls" name="imageUrls[]" required>
            </div>
            <div>
                <a class="btn btn-primary" id="addImageUrl">Add Image</a>
            </div>
            <br />
            <div><<button type="submit" class="btn btn-success">Submit</button></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    document.getElementById('addImageUrl').addEventListener('click', function () {
        var container = document.getElementById('imageUrlsContainer');
        var input = document.createElement('input');
        input.className = 'form-control';
        input.name = 'imageUrls[]';
        input.required = true;
        container.appendChild(document.createElement('br'));
        container.appendChild(input);
    });
</script>
